<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="cq:Dialog"
    title="Properties"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <text
                jcr:primaryType="cq:Widget"
                title="Text"
                hideLabel="{Boolean}true"
                name="./text"
                xtype="richtext">
            <rtePlugins jcr:primaryType="nt:unstructured">
                <!-- Include your plugins here -->
            </rtePlugins>
        </text>
        <textType
                jcr:primaryType="cq:Widget"
                value="paragraph"
                defaultValue="Paragraph"
                fieldLabel="Text Type"
                name="./textType"
                options="/apps/aem-amp/components/content/ampText/dropdowns/text-options.json"
                type="select"
                xtype="selection"/>
        <textAlign
                jcr:primaryType="cq:Widget"
                value="right"
                defaultValue="Right"
                fieldLabel="Text Align"
                name="./textAlign"
                options="/apps/aem-amp/components/content/ampText/dropdowns/text-align-options.json"
                type="select"
                xtype="selection"/>
    </items>
</jcr:root>
