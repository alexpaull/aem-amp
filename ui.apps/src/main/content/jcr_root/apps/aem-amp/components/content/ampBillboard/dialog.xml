<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Properties"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <image
            jcr:primaryType="cq:Widget"
            fieldLabel="Billboard Image"
            name="./image"
            defaultValue="/content"
            rootPath="/content"
            xtype="pathfield"/>
        <mobileheight
                jcr:primaryType="cq:Widget"
                fieldLabel="Mobile Height (px)"
                name="./mobileHeight"
                defaultValue="612"
                xtype="textfield"/>
        <tabletheight
                jcr:primaryType="cq:Widget"
                fieldLabel="Tablet Height (px)"
                name="./tabletHeight"
                defaultValue="612"
                xtype="textfield"/>
        <height
                jcr:primaryType="cq:Widget"
                fieldLabel="Image Height (px)"
                name="./height"
                defaultValue="612"
                xtype="textfield"/>
        <text
                jcr:primaryType="cq:Widget"
                fieldLabel="Text"
                name="./text"
                defaultValue=""
                xtype="textfield"/>
        <class
                jcr:primaryType="cq:Widget"
                fieldLabel="CSS Class"
                name="./class"
                defaultValue=""
                xtype="textfield"/>
    </items>
</jcr:root>
